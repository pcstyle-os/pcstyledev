{
  "name": "pcstyle SSH Contact Server",
  "description": "SSH terminal contact form server for pcstyle.dev",
  "repository": "https://github.com/pc-style/pcstyledev",
  "logo": "https://pcstyle.dev/icon.png",
  "keywords": ["ssh", "terminal", "contact-form", "node"],
  "env": {
    "API_URL": {
      "description": "Your Vercel API endpoint URL",
      "value": "https://pcstyle.dev/api/contact",
      "required": true
    },
    "SSH_PORT": {
      "description": "SSH port (Heroku will assign, use PORT env var)",
      "value": "2222",
      "required": false
    },
    "SSH_HOST": {
      "description": "SSH host binding",
      "value": "0.0.0.0",
      "required": false
    },
    "SSH_PASSWORD": {
      "description": "Optional password for SSH authentication",
      "required": false
    },
    "NODE_ENV": {
      "value": "production"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}





